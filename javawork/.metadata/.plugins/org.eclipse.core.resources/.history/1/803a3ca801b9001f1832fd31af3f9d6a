package day1213;

import java.util.Scanner;

public class Ex9While {

	public static void main(String[] args) {
		// 1글자씩 입력하다가 대소문자 구분 없이 x를 누르면빠져나와서 입력한 데이터들을 분석한 결과를 출력
		// 대문자: 3, 소문자: 4, 숫자: 5
		Scanner sc=new Scanner(System.in);
		char ch;
		int chCode, result = 0;
		
		System.out.println("** 문자 분석 **");
		System.out.println("* 분석: 대문자(3), 소문자(4), 숫자(5), Error(0) **");
		
		while(true) {
			System.out.println("분석할 문자 입력(종료를 원하면 x 입력): ");
			ch = sc.nextLine().charAt(0);
			chCode = (int)ch;
			
			if(65<=chCode && 90>=chCode)
				result = 3;
			if(97<=chCode && 122>=chCode)
				result = 4;
			if(48<=chCode && 57>=chCode)
				result = 5;
				
			System.out.println("문자 분석 결과: "+result);
			
			if(ch == 'x' || ch == 'X') {
				System.out.println("종료");
				break;
			}
							
		}

	}

}
