package day1211;

public class Book43 {

	public static void main(String[] args) {
		// 진법 변환 예제(2진수 <--> 10진수 등)
		int var1 = 0b1011; // 2진수 1+2+8 = 11
		int var2 = 0206; // 8진수 64*2 + 6 = 134
		int var3 = 365;
		int var4 = 0xB3; // 16진수 16*11 + 3 = 179

		System.out.println("var1 = " + var1);
		System.out.println("var2 = " + var2);
		System.out.println("var3 = " + var3);
		System.out.println("var4 = " + var4);
		System.out.printf("각 진법 수: %d %o %x", var1, var2, var3, var4);

	}

}
